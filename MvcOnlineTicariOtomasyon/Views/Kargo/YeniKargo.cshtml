@model MvcOnlineTicariOtomasyon.Models.sınıf.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kargo Ekle</h2>
<br />
<form method="post" class="form-group">
    
    @Html.LabelFor(x => x.TakipKodu)
    <input type="type" name="TakipKodu" value="@ViewBag.tkod"  class="form-control"/> 
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Alıcı)
    @Html.TextBoxFor(x => x.Alıcı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    <input type="date" name="Tarih" value="" class="form-control" />
    <br />
    @Html.LabelFor(x => x.Açıklama)
    @Html.TextAreaFor(x => x.Açıklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>