@using MvcOnlineTicariOtomasyon.Models.sınıf
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered table-striped table-hover" style="margin-top:20px;">
    <tr>
        
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
   {
       

<tr>
    
    <td>
        @k.KategoriAd
    </td>
    <td><a href="/Kategori/KategoriSil/@k.KategoriId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Kategori/KategoriGetir/@k.KategoriId" class="btn btn-success" >Güncelle</a></td>
</tr>
   }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa }))
<a class="btn btn-primary" href="/Kategori/KategoriEkle">Kategori Ekle</a>

