@model MvcOnlineTicariOtomasyon.Models.sınıf.Kategori

@{
    ViewBag.Title = "kategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form method="post" class="form-group">
    @Html.LabelFor(x=>x.KategoriAd)
    @Html.TextBoxFor(x=>x.KategoriAd,new { @class="form-control" })
    <br />
    <button class="btn btn-info" id="btn1">Kaydet</button>
    <script>
        $('#btn1').click(function () {
            alert("Kategori Eklendi")
        });
    </script>
</form>

