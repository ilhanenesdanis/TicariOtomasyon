@using MvcOnlineTicariOtomasyon.Models.sınıf
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped table-hover">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        
    </tr>
    @foreach (var x in Model)
    {


    <tr>
        <td>@x.CariId</td>
        <td>@x.CariAd</td>
        <td>@x.CariSoyad</td>
        <td>@x.CariSehir</td>
        <td>@x.CariMail</td>
        <td><a href="/Cari/Sil/@x.CariId" class="btn btn-danger">Sil</a></td>
        <td><a href="/Cari/carigetir/@x.CariId" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Cari/MusteriSatıs/@x.CariId" class="btn btn-info">Satış Geçmişi</a></td>
    </tr>
    }
</table>
<a href="/Cari/yeniekle/" class="btn btn-info">Yeni Cari Ekle</a>

