@using MvcOnlineTicariOtomasyon.Models.sınıf
@model List<Ürünler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>Ürün Adı: @Html.TextBox("p")
    <input type="submit"  value="Ara"/>
    </p>
}
<br />
<table class="table table-bordered table-striped table-hover">
    <tr>
        
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Durum</th>
       
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlışFiyat ₺</td>
            <td>@u.SatışFiyat ₺</td>
            <td>@u.kategori.KategoriAd</td>
            <td>@u.Durum</td>
            
            <td><a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Urun/yeniurun/">Yeni ürün ekle</a>

